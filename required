	bridge-utils \
	dnsmasq-base
	ebtables \
	iptables \
	libpam-cgfs \
	libvirt0 \
	libvirt-clients \
	libvirt-daemon-system \
	lxc \

# misc
apt install -y \
	acpi \
	build-essential \
	ledger \
	lshw \
	psmisc \
	rcconf
	sshpass \
